<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jimmy.cleanarchitecture">

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher_foreground"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.CleanArchitecture"
        android:name=".framework.MajesticReaderApplication">
        <activity
            android:name=".presentation.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.CleanArchitecture.NoActionBar">
        </activity>

        <!-- Splash Activity -->
        <activity android:name=".presentation.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>